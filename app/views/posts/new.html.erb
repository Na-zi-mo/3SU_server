<%= form_for(@post, method: "post") do |f| %>
  <% debugger %>
  <%= f.label(:page) %>
  <%= @post.errors[:page].join('<br />') %>
  <br/>
  <%= f.select(:page_id,Page.all.collect{|p| [p.title, p.id]}) %>
  <br/>
  <%= f.label(:title) %>
  <%= @post.errors[:title].join('<br />') %>
  <br/>
  <%= f.text_field(:title) %>
  <br />
  <%= f.label(:body) %>
  <%= @post.errors[:body].join('<br />') %>
  <br/>
  <%= f.text_area(:body, rows: 20, cols:100) %>
  <br />
  <%= submit_tag("Ajouter") %>
<% end %>